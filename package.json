{
  "name": "huble-hs-devkit",
  "version": "1.0.0",
  "private": true,
  "description": "Modern React + HubSpot CMS development framework",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:tokens": "pnpm --filter design-tokens build",
    "build:ui": "pnpm --filter ui build",
    "build:theme": "pnpm --filter hubspot-theme build",
    "generate:macros": "pnpm --filter build-tools generate:macros",
    "preview": "pnpm --filter local-preview dev",
    "storybook": "pnpm --filter storybook dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "prettier": "^3.4.2"
  },
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  }
}
